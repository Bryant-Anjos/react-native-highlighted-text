{
  "name": "react-native-highlighted-text",
  "version": "1.1.0",
  "description": "A React Native component to individually style texts inside a text",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "commit": "cz",
    "format": "prettier --write ./src/**/*.{ts,tsx}",
    "lint": "eslint --fix ./src/**/*.{ts,tsx}",
    "prepare": "husky install",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bryant-Anjos/react-native-highlighted-text.git"
  },
  "keywords": [
    "react",
    "react native",
    "component",
    "react native component",
    "mobile",
    "ios",
    "text",
    "text component",
    "style text",
    "styled text component",
    "dynamic style text",
    "individualy style text"
  ],
  "author": "Bryant Moreira dos Anjos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Bryant-Anjos/react-native-highlighted-text/issues"
  },
  "homepage": "https://github.com/Bryant-Anjos/react-native-highlighted-text#readme",
  "files": [
    "/lib"
  ],
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.0",
    "@types/react-native": "^0.63.45",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-jest": "^27.0.6",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.1",
    "metro-react-native-babel-preset": "^0.64.0",
    "prettier": "^2.2.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "{src,__tests__}/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
